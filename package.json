{
  "name": "nestjs",
  "version": "4.2.0",
  "description": "Modern, fast, powerful node.js web framework",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:live": "nodemon -e ts --watch src index.js",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "gulp build",
    "build:lib": "gulp build --dist lib",
    "prepublish": "npm run build:lib",
    "publish": "./node_modules/.bin/lerna publish --skip-git"
  },
  "engines": {
    "node": ">=6.11.0"
  },
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^4.2.1",
    "@nestjs/core": "^4.2.1",
    "@nestjs/microservices": "^4.2.1",
    "@nestjs/testing": "^4.2.1",
    "@nestjs/websockets": "^4.2.1",
    "cli-color": "^1.2.0",
    "engine.io-client": "^3.1.3",
    "express": "^4.16.2",
    "fast-safe-stringify": "^1.2.1",
    "iterare": "0.0.8",
    "json-socket": "^0.3.0",
    "opencollective": "^1.0.3",
    "optional": "^0.1.4",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "socket.io": "^2.0.4",
    "typescript": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "7.1.0",
    "@types/express": "^4.0.39",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.50",
    "@types/redis": "^2.8.1",
    "@types/reflect-metadata": "0.0.5",
    "@types/sinon": "^2.3.7",
    "@types/socket.io": "^1.4.31",
    "awesome-typescript-loader": "^3.3.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.0",
    "core-js": "^2.5.1",
    "coveralls": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-sequence": "^0.4.6",
    "gulp-typescript": "^3.2.3",
    "gulp-watch": "^4.3.11",
    "imports-loader": "^0.7.1",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.7",
    "lerna": "^2.5.1",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "ts-node": "^3.3.0"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/nest",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts",
      "src/core/adapters/*.ts",
      "src/websockets/adapters/*.ts",
      "src/core/nest-application.ts",
      "src/core/nest-factory.ts",
      "src/common/services/logger.service.ts",
      "src/core/errors/exceptions",
      "src/microservices/exceptions/",
      "src/microservices/microservices-module.ts",
      "src/microservices/nest-microservice.ts",
      "src/core/middlewares/middlewares-module.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
