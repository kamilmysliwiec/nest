{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es7"],
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": "./packages",
    "paths": {
      "@nestjs/common/*": ["common/src/*"],
      "@nestjs/core/*": ["core/src/*"],
      "@nestjs/testing/*": ["testing/src/*"],
      "@nestjs/microservices/*": ["microservices/src/*"],
      "@nestjs/websockets/*": ["websockets/src/*"]
    }
  }
}
