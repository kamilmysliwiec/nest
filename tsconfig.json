{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "importHelpers": false,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "lib": ["esnext"],
    "paths": {
      "@nestjs/*": ["./packages/*"]
    }
  },
  "exclude": ["../node_modules", "./**/*.spec.ts"]
}
